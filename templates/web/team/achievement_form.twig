{% extends 'web/team/layout_team.html.twig' %}

{% block team_body %}
    <div class="col">
        <div class="row">
            {% if achievement is defined %}
                <div class="col-12 text-center pb-2">
                    <span>Are you sure you want to update {{ achievement.title }} ({{ achievement|cost }})?</span>
                </div>
            {% endif %}
            <div class="col-12 text-center">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
